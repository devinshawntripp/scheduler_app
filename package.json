{
  "name": "scheduler",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "npm run build:css && remix vite:build",
    "build:css": "tailwindcss -m -i ./app/tailwind.css -o ./public/tailwind.css",
    "dev": "concurrently \"npm run dev:css\" \"remix vite:dev\"",
    "dev:css": "tailwindcss -w -i ./app/tailwind.css -o ./public/tailwind.css",
    "dev:stop": "docker-compose -f docker-compose.dev.yml down",
    "db-migrate": "prisma migrate dev --name dev",
    "psql-login": "psql -h localhost -p 5432 -U postgres -d scheduler",
    "db-deploy": "npx prisma migrate dev --name init",
    "manual-push": "npx prisma db push",
    "db:gen": "npx prisma generate",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "db:push": "npx prisma db push",
    "dev:services": "docker-compose -f docker-compose.dev.yml up -d"
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.4",
    "@fullcalendar/daygrid": "^6.1.4",
    "@fullcalendar/interaction": "^6.1.4",
    "@fullcalendar/react": "^6.1.4",
    "@fullcalendar/timegrid": "^6.1.4",
    "@google-cloud/local-auth": "^2.1.0",
    "@prisma/client": "^5.19.1",
    "@remix-run/node": "^2.0.0",
    "@remix-run/react": "^2.0.0",
    "@remix-run/serve": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "framer-motion": "^11.5.4",
    "googleapis": "^118.0.0",
    "isbot": "^3.8.0",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.3.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.11",
    "@types/nodemailer": "^6.4.7",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "postcss": "^8.4.45",
    "prisma": "^5.19.1",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.1.6",
    "vite": "^5.4.4",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
